{
  "compilerOptions": {
    "preserveSymlinks": true,
    "target": "ES2021",
    "lib": [
      "ESNext"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "build.ts"
  ]
}
